@inherits LayoutComponentBase

<div class="sidebar">
    <NavMenu/>
</div>

<div class="main">
    <div class="top-row px-4">
        <AuthorizeView>
            <Authorized>
                <LoginControl />
            </Authorized>
            <NotAuthorized>
                <a href="/Account/Login" class="btn btn-success">Login</a>&nbsp;
                <a href="/Registration" class="btn btn-warning">Registration</a>
            </NotAuthorized>
        </AuthorizeView>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>

@code {
    public HttpContext context { get; set; }
}